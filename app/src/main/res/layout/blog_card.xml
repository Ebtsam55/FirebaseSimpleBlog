<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/backGround">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:elevation="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:paddingBottom="10dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="here is the title "
            android:paddingStart="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingStart="10dp"
            android:text="mlmghhkkhijkhkhkhk" />

        <TextView
            android:id="@+id/post_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingStart="10dp"
            android:text="userName"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/fui_transparent"
            android:orientation="horizontal">


            <com.like.LikeButton
                android:id="@+id/fav_heart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                card_view:circle_end_color="@color/heart_on"
                card_view:circle_start_color="@color/heart_on"
                card_view:dots_primary_color="@color/heart_on"
                card_view:dots_secondary_color="@color/heart_on"
                card_view:icon_size="25dp"
                card_view:icon_type="heart"
                card_view:like_drawable="@drawable/ic_favorite2"
                card_view:unlike_drawable="@drawable/ic_favorite" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>